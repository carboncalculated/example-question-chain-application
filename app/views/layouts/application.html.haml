!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application", "compiled/screen"
    = csrf_meta_tag
    = yield(:head)

  %body
    #header
      = link_to "home", "/"
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)

      = yield
    
    = javascript_include_tag "mootools-1.2.4-core-yc", "mootools-1.2.4.4-more.js", "question_chain-1.1.3", "application"
      
    
